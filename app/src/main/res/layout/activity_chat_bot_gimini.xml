<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/SendButton"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="sendButton"
    tools:context=".ChatBotGimini">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Input displayrd here...."
        android:onClick="sendButton"
        android:text="Send"
        app:layout_constraintStart_toEndOf="@+id/editTextTextInput"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextOutput" />

    <EditText
        android:id="@+id/editTextTextOutput"
        android:layout_width="398dp"
        android:layout_height="635dp"
        android:layout_marginStart="4dp"
        android:ems="10"
        android:hint="Output display here...."
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextInput"
        android:layout_width="288dp"
        android:layout_height="69dp"
        android:ems="10"
        android:hint="Input displayed here...."
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextOutput" />
</androidx.constraintlayout.widget.ConstraintLayout>